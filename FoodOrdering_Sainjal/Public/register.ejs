<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Register - GameZone</title>

  <!-- Bootstrap & Animations -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

  <style>
    body {
      background-color: #121212;
      color: #fff;
      font-family: "Poppins", sans-serif;
    }

    .navbar {
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
    }

    .navbar-brand {
      font-weight: 700;
      font-size: 1.6rem;
      letter-spacing: 1px;
    }

    .nav-link {
      color: #ccc !important;
      margin: 0 10px;
      transition: all 0.3s ease;
    }

    .nav-link:hover {
      color: #0dcaf0 !important;
      transform: scale(1.05);
    }

    main {
      max-width: 600px;
      margin: 3rem auto;
      background-color: #1f1f1f;
      border-radius: 15px;
      padding: 2rem;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.6);
      animation: fadeInUp 1s ease;
    }

    h1 {
      text-align: center;
      margin-bottom: 1.5rem;
      font-weight: 700;
      color: #0dcaf0;
    }

    label {
      font-weight: 500;
      margin-bottom: 5px;
    }

    .form-control {
      background-color: #2a2a2a;
      border: 1px solid #444;
      color: #fff;
      border-radius: 10px;
    }

    .form-control:focus {
      background-color: #333;
      border-color: #0dcaf0;
      box-shadow: 0 0 8px #0dcaf0;
    }

    .btn-primary {
      background: linear-gradient(90deg, #0dcaf0, #6610f2);
      border: none;
      width: 100%;
      padding: 12px;
      border-radius: 30px;
      font-weight: bold;
      transition: 0.3s;
    }

    .btn-primary:hover {
      transform: scale(1.05);
      opacity: 0.9;
    }

    footer {
      background: #0d0d0d;
      padding: 1rem;
      text-align: center;
      color: #bbb;
      margin-top: 3rem;
    }

    .form-text {
      color: #aaa;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3">
    <div class="container">
      <a class="navbar-brand" href="/">ðŸŽ® GameZone</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navMenu">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
          <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
          <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
          <li class="nav-item"><a class="nav-link active text-info" href="/register">Register</a></li>
          <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Registration Form -->
  <main>
    <h1 class="animate__animated animate__fadeInDown">Create Your Account</h1>

    <form onsubmit="validateRegister(event)">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control" id="username" required />
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" required />
      </div>

      <div class="mb-3">
        <label for="phone" class="form-label">Phone Number</label>
        <input type="tel" class="form-control" id="phone" pattern="[0-9]{10}" placeholder="e.g. 9876543210" required />
      </div>

      <div class="mb-3">
        <label for="dob" class="form-label">Date of Birth</label>
        <input type="date" class="form-control" id="dob" required />
      </div>

      <div class="mb-3">
        <label for="genre" class="form-label">Favorite Game Genre</label>
        <select class="form-control" id="genre" required>
          <option value="">Select one</option>
          <option>Action</option>
          <option>Adventure</option>
          <option>RPG</option>
          <option>Sports</option>
          <option>Strategy</option>
          <option>Simulation</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" minlength="6" required />
        <div class="form-text">Minimum 6 characters</div>
      </div>

      <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" id="confirmPassword" required />
      </div>

      <button type="submit" class="btn btn-primary mt-3">Register</button>
    </form>
  </main>

  <footer>
    <p>&copy; 2025 GameZone. All rights reserved.</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function validateRegister(event) {
      event.preventDefault();

      const username = document.getElementById("username").value.trim();
      const email = document.getElementById("email").value.trim();
      const phone = document.getElementById("phone").value.trim();
      const dob = document.getElementById("dob").value.trim();
      const genre = document.getElementById("genre").value.trim();
      const password = document.getElementById("password").value.trim();
      const confirmPassword = document.getElementById("confirmPassword").value.trim();

      if (!username || !email || !phone || !dob || !genre || !password || !confirmPassword) {
        alert("âš ï¸ Please fill in all fields!");
        return;
      }

      if (password !== confirmPassword) {
        alert("âŒ Passwords do not match!");
        return;
      }

      fetch("/register", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ username, email, phone, dob, genre, password })
      })
        .then(res => res.json())
        .then(data => {
          alert(data.message);
          if (data.message === "User registered successfully!") {
            window.location.href = "/login";
          }
        })
        .catch(err => {
          console.error(err);
          alert("Error connecting to server. Please try again.");
        });
    }
  </script>
</body>
</html>
