    }

    /* Navbar */
    .navbar {
      background: rgba(15, 15, 25, 0.95);
      backdrop-filter: blur(10px);
      box-shadow: 0 2px 15px rgba(0, 0, 0, 0.5);
      transition: all 0.3s ease;
    }
    .navbar a.nav-link {
      color: #aaa !important;
      margin-right: 15px;
