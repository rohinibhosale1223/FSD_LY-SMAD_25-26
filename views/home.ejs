<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navigation -->
    <%- include('partials/navbar') %>
    
    <!-- Hero Section -->
    <section class="hero-section bg-gradient-primary text-white">
        <div class="container">
            <div class="row align-items-center min-vh-100 py-5">
                <div class="col-lg-6">
                    <div class="hero-content">
                        <h1 class="display-4 fw-bold mb-4 animate-fade-in">
                            Transform Your Future with 
                            <span class="text-warning">Expert-Led</span> Learning
                        </h1>
                        <p class="lead mb-4 animate-fade-in-delay">
                            Join thousands of learners who are advancing their careers with our comprehensive 
                            online courses. Learn from industry experts, get hands-on experience, and build 
                            the skills that matter.
                        </p>
                        <div class="hero-buttons animate-fade-in-delay-2">
                            <a href="#courses" class="btn btn-warning btn-lg me-3">
                                <i class="fas fa-play me-2"></i>Start Learning
                            </a>
                            <a href="#" class="btn btn-outline-light btn-lg">
                                <i class="fas fa-info-circle me-2"></i>Learn More
                            </a>
                        </div>
                        
                        <!-- Stats -->
                        <div class="row mt-5 pt-4">
                            <div class="col-4">
                                <div class="stat-item text-center">
                                    <h3 class="fw-bold text-warning"><%= stats.totalStudents.toLocaleString() %>+</h3>
                                    <p class="mb-0">Students</p>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-item text-center">
                                    <h3 class="fw-bold text-warning"><%= stats.totalCourses %>+</h3>
                                    <p class="mb-0">Courses</p>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-item text-center">
                                    <h3 class="fw-bold text-warning"><%= stats.successRate %>%</h3>
                                    <p class="mb-0">Success Rate</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-image text-center">
                        <div class="floating-card">
                            <i class="fas fa-graduation-cap fa-5x text-warning mb-3"></i>
                            <h4 class="text-white">Start Your Journey Today</h4>
                            <p class="text-light">Learn at your own pace, anywhere, anytime</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Scroll indicator -->
        <div class="scroll-indicator text-center pb-4">
            <a href="#features" class="text-white">
                <i class="fas fa-chevron-down fa-2x animate-bounce"></i>
            </a>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-5 bg-light">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col-lg-8 mx-auto">
                    <h2 class="section-title fw-bold">Why Choose LearnHub?</h2>
                    <p class="lead text-muted">
                        We provide everything you need to succeed in your learning journey
                    </p>
                </div>
            </div>
            
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <div class="feature-card h-100 p-4 bg-white rounded shadow-sm text-center">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-users fa-3x text-primary"></i>
                        </div>
                        <h4 class="fw-bold">Expert Instructors</h4>
                        <p class="text-muted">
                            Learn from industry professionals with years of real-world experience
                        </p>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="feature-card h-100 p-4 bg-white rounded shadow-sm text-center">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-clock fa-3x text-success"></i>
                        </div>
                        <h4 class="fw-bold">Flexible Learning</h4>
                        <p class="text-muted">
                            Study at your own pace with lifetime access to course materials
                        </p>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="feature-card h-100 p-4 bg-white rounded shadow-sm text-center">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-certificate fa-3x text-warning"></i>
                        </div>
                        <h4 class="fw-bold">Certification</h4>
                        <p class="text-muted">
                            Earn recognized certificates upon successful course completion
                        </p>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="feature-card h-100 p-4 bg-white rounded shadow-sm text-center">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-mobile-alt fa-3x text-info"></i>
                        </div>
                        <h4 class="fw-bold">Mobile Learning</h4>
                        <p class="text-muted">
                            Access courses on any device, anywhere, anytime
                        </p>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="feature-card h-100 p-4 bg-white rounded shadow-sm text-center">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-headset fa-3x text-danger"></i>
                        </div>
                        <h4 class="fw-bold">24/7 Support</h4>
                        <p class="text-muted">
                            Get help whenever you need it with our dedicated support team
                        </p>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="feature-card h-100 p-4 bg-white rounded shadow-sm text-center">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-project-diagram fa-3x text-purple"></i>
                        </div>
                        <h4 class="fw-bold">Hands-on Projects</h4>
                        <p class="text-muted">
                            Build real-world projects to showcase your skills to employers
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Courses Section -->
    <section id="courses" class="py-5">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col-lg-8 mx-auto">
                    <h2 class="section-title fw-bold">Featured Courses</h2>
                    <p class="lead text-muted">
                        Discover our most popular courses designed to boost your career
                    </p>
                </div>
            </div>
            
            <div class="row g-4">
                <% featuredCourses.forEach(course => { %>
                <div class="col-lg-4 col-md-6">
                    <div class="course-card h-100 bg-white rounded shadow-sm overflow-hidden">
                        <div class="course-image position-relative">
                            <div class="placeholder-img bg-gradient-primary d-flex align-items-center justify-content-center text-white" style="height: 200px;">
                                <i class="fas fa-book-open fa-3x opacity-50"></i>
                            </div>
                            <div class="course-category position-absolute top-0 start-0 m-3">
                                <span class="badge bg-primary"><%= course.category %></span>
                            </div>
                            <div class="course-price position-absolute top-0 end-0 m-3">
                                <span class="badge bg-warning text-dark fw-bold">â‚¹<%= course.price %></span>
                            </div>
                        </div>
                        
                        <div class="course-content p-4">
                            <h5 class="course-title fw-bold mb-2">
                                <a href="#" class="text-decoration-none text-dark"><%= course.title %></a>
                            </h5>
                            <p class="course-instructor text-muted mb-3">
                                <i class="fas fa-user me-1"></i>by <%= course.instructor %>
                            </p>
                            
                            <div class="course-meta d-flex justify-content-between align-items-center mb-3">
                                <div class="rating">
                                    <% for(let i = 1; i <= 5; i++) { %>
                                        <i class="fas fa-star <%= i <= Math.floor(course.rating) ? 'text-warning' : 'text-muted' %>"></i>
                                    <% } %>
                                    <span class="ms-1 text-muted">(<%= course.rating %>)</span>
                                </div>
                                <div class="students text-muted">
                                    <i class="fas fa-users me-1"></i><%= course.students.toLocaleString() %>
                                </div>
                            </div>
                            
                            <div class="course-actions d-grid gap-2">
                                <button class="btn btn-primary">
                                    <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                                </button>
                                <button class="btn btn-outline-primary">
                                    <i class="fas fa-eye me-2"></i>View Details
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
            
            <div class="text-center mt-5">
                <a href="#" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-th-large me-2"></i>View All Courses
                </a>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section bg-primary text-white py-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-lg-8 mx-auto">
                    <h2 class="fw-bold mb-4">Ready to Start Your Learning Journey?</h2>
                    <p class="lead mb-4">
                        Join thousands of students who are already transforming their careers with LearnHub
                    </p>
                    <div class="cta-buttons">
                        <a href="/auth/register" class="btn btn-warning btn-lg me-3">
                            <i class="fas fa-user-plus me-2"></i>Get Started Free
                        </a>
                        <a href="/contact" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-phone me-2"></i>Contact Us
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Footer -->
    <%- include('partials/footer') %>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
</body>
</html>