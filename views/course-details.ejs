<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navigation -->
    <%- include('partials/navbar') %>
    
    <!-- Course Hero Section -->
    <section class="bg-dark text-white py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb text-light">
                            <li class="breadcrumb-item"><a href="/" class="text-light">Home</a></li>
                            <li class="breadcrumb-item"><a href="/courses" class="text-light">Courses</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><%= course.title %></li>
                        </ol>
                    </nav>
                    
                    <div class="mb-3">
                        <span class="badge bg-primary me-2"><%= course.category %></span>
                        <span class="badge bg-secondary"><%= course.level %></span>
                    </div>
                    
                    <h1 class="display-5 fw-bold mb-3"><%= course.title %></h1>
                    
                    <p class="lead mb-4"><%= course.description %></p>
                    
                    <div class="row mb-4">
                        <div class="col-auto">
                            <div class="d-flex align-items-center">
                                <div class="rating-stars me-2">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <i class="fas fa-star <%= i <= Math.floor(course.rating) ? 'text-warning' : 'text-muted' %>"></i>
                                    <% } %>
                                </div>
                                <span class="me-3"><%= course.rating %> rating</span>
                                <span class="text-muted">(<%= course.students.toLocaleString() %> students)</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-auto">
                            <p class="mb-1"><i class="fas fa-user me-2"></i>Instructor: <strong><%= course.instructor %></strong></p>
                        </div>
                        <% if (course.duration) { %>
                        <div class="col-auto">
                            <p class="mb-1"><i class="fas fa-clock me-2"></i>Duration: <strong><%= course.duration %></strong></p>
                        </div>
                        <% } %>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <div class="card shadow-lg">
                        <img src="<%= course.image %>" class="card-img-top" alt="<%= course.title %>" 
                             style="height: 250px; object-fit: cover;" onerror="this.src='/images/default-course.jpg'">
                        
                        <div class="card-body">
                            <div class="text-center mb-4">
                                <h3 class="text-primary fw-bold">â‚¹<%= course.price.toLocaleString() %></h3>
                            </div>

                            <!-- Flash Messages -->
                            <% if (success_msg && success_msg.length > 0) { %>
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <%= success_msg %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            <% } %>

                            <% if (error_msg && error_msg.length > 0) { %>
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <%= error_msg %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            <% } %>
                            
                            <% if (user) { %>
                                <% if (isEnrolled) { %>
                                    <div class="d-grid mb-3">
                                        <button class="btn btn-success btn-lg" disabled>
                                            <i class="fas fa-check-circle me-2"></i>Enrolled
                                        </button>
                                    </div>
                                    <div class="text-center">
                                        <a href="/courses/my/enrolled" class="btn btn-outline-primary">
                                            Go to My Courses
                                        </a>
                                    </div>
                                <% } else { %>
                                    <div class="d-grid gap-2">
                                        <form action="/courses/<%= course.id %>/enroll" method="POST" class="d-grid">
                                            <button type="submit" class="btn btn-success btn-lg">
                                                <i class="fas fa-play me-2"></i>Enroll Now
                                            </button>
                                        </form>
                                        
                                        <% if (isInCart) { %>
                                            <button class="btn btn-outline-secondary" disabled>
                                                <i class="fas fa-shopping-cart me-2"></i>In Cart
                                            </button>
                                        <% } else { %>
                                            <form action="/cart/add" method="POST">
                                                <input type="hidden" name="courseId" value="<%= course.id %>">
                                                <button type="submit" class="btn btn-outline-primary w-100">
                                                    <i class="fas fa-cart-plus me-2"></i>Add to Cart
                                                </button>
                                            </form>
                                        <% } %>
                                    </div>
                                <% } %>
                            <% } else { %>
                                <div class="d-grid gap-2">
                                    <a href="/auth/login" class="btn btn-success btn-lg">
                                        <i class="fas fa-play me-2"></i>Enroll Now
                                    </a>
                                    <a href="/auth/login" class="btn btn-outline-primary">
                                        <i class="fas fa-cart-plus me-2"></i>Add to Cart
                                    </a>
                                </div>
                                <p class="text-center mt-2 small text-muted">
                                    <a href="/auth/login">Login</a> or <a href="/auth/register">Register</a> to enroll
                                </p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Course Content -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <!-- Course Description -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4 class="mb-0">Course Description</h4>
                        </div>
                        <div class="card-body">
                            <p><%= course.description %></p>
                        </div>
                    </div>

                    <!-- What You'll Learn -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4 class="mb-0">What You'll Learn</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <ul class="list-unstyled">
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Comprehensive understanding of the subject</li>
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Hands-on practical experience</li>
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Industry best practices</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul class="list-unstyled">
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Real-world project experience</li>
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Career advancement skills</li>
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Certificate of completion</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Course Requirements -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4 class="mb-0">Requirements</h4>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="fas fa-dot-circle text-primary me-2"></i>Basic computer knowledge</li>
                                <li class="mb-2"><i class="fas fa-dot-circle text-primary me-2"></i>Internet connection for online learning</li>
                                <li class="mb-2"><i class="fas fa-dot-circle text-primary me-2"></i>Willingness to learn and practice</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Instructor Info -->
                    <div class="card">
                        <div class="card-header">
                            <h4 class="mb-0">About the Instructor</h4>
                        </div>
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <img src="/images/default-avatar.png" alt="<%= course.instructor %>" 
                                         class="rounded-circle" width="80" height="80">
                                </div>
                                <div class="col">
                                    <h5 class="mb-1"><%= course.instructor %></h5>
                                    <p class="text-muted mb-2">Expert Instructor</p>
                                    <p class="mb-0">Experienced professional with years of industry expertise, dedicated to providing high-quality education and mentoring students to achieve their learning goals.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    <!-- Course Stats -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Course Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-6">
                                    <div class="text-center">
                                        <i class="fas fa-users fa-2x text-primary mb-2"></i>
                                        <p class="mb-0 fw-bold"><%= course.students.toLocaleString() %></p>
                                        <small class="text-muted">Students</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="text-center">
                                        <i class="fas fa-star fa-2x text-warning mb-2"></i>
                                        <p class="mb-0 fw-bold"><%= course.rating %></p>
                                        <small class="text-muted">Rating</small>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="mb-2">
                                <strong>Category:</strong> <%= course.category %>
                            </div>
                            <div class="mb-2">
                                <strong>Level:</strong> <%= course.level %>
                            </div>
                            <% if (course.duration) { %>
                            <div class="mb-2">
                                <strong>Duration:</strong> <%= course.duration %>
                            </div>
                            <% } %>
                            <div class="mb-2">
                                <strong>Language:</strong> English
                            </div>
                        </div>
                    </div>

                    <!-- Share Course -->
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Share this Course</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-around">
                                <a href="#" class="btn btn-outline-primary btn-sm">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a href="#" class="btn btn-outline-info btn-sm">
                                    <i class="fab fa-twitter"></i>
                                </a>
                                <a href="#" class="btn btn-outline-success btn-sm">
                                    <i class="fab fa-whatsapp"></i>
                                </a>
                                <a href="#" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-link"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <%- include('partials/footer') %>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>