<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navigation -->
    <%- include('partials/navbar') %>
    
    <!-- Page Header -->
    <section class="bg-gradient-primary text-white py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="display-4 fw-bold">Shopping Cart</h1>
                    <p class="lead">Review your selected courses before checkout</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Cart Content -->
    <section class="py-5">
        <div class="container">
            <!-- Flash Messages -->
            <% if (success_msg && success_msg.length > 0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= success_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <% if (error_msg && error_msg.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <% if (cartItems.length === 0) { %>
                <!-- Empty Cart -->
                <div class="row">
                    <div class="col-12">
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-cart fa-5x text-muted mb-4"></i>
                            <h3 class="text-muted mb-4">Your Cart is Empty</h3>
                            <p class="text-muted mb-4">Looks like you haven't added any courses to your cart yet. Browse our course catalog to find something you like!</p>
                            <a href="/courses" class="btn btn-primary btn-lg">
                                <i class="fas fa-search me-2"></i>Browse Courses
                            </a>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <!-- Cart Items -->
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card shadow-sm">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Cart Items (<%= cartItems.length %>)</h5>
                                <form action="/cart/clear" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-outline-danger btn-sm" 
                                            onclick="return confirm('Are you sure you want to clear your cart?')">
                                        <i class="fas fa-trash me-1"></i>Clear Cart
                                    </button>
                                </form>
                            </div>
                            <div class="card-body p-0">
                                <% cartItems.forEach((item, index) => { %>
                                    <div class="border-bottom <%= index === cartItems.length - 1 ? '' : 'border-bottom' %>">
                                        <div class="row g-0 p-4">
                                            <div class="col-md-3">
                                                <img src="<%= item.image %>" class="img-fluid rounded" 
                                                     alt="<%= item.title %>" style="height: 120px; object-fit: cover; width: 100%;"
                                                     onerror="this.src='/images/default-course.jpg'">
                                            </div>
                                            <div class="col-md-6">
                                                <div class="card-body p-0 ps-3">
                                                    <div class="mb-2">
                                                        <span class="badge bg-primary"><%= item.category %></span>
                                                        <span class="badge bg-secondary ms-1"><%= item.level %></span>
                                                    </div>
                                                    
                                                    <h6 class="card-title">
                                                        <a href="/courses/<%= item.id %>" class="text-decoration-none text-dark">
                                                            <%= item.title %>
                                                        </a>
                                                    </h6>
                                                    
                                                    <p class="card-text text-muted small mb-2">
                                                        <i class="fas fa-user me-1"></i>By <%= item.instructor %>
                                                    </p>
                                                    
                                                    <div class="d-flex align-items-center mb-2">
                                                        <div class="rating-stars me-2">
                                                            <% for (let i = 1; i <= 5; i++) { %>
                                                                <i class="fas fa-star <%= i <= Math.floor(item.rating) ? 'text-warning' : 'text-muted' %>" style="font-size: 0.8rem;"></i>
                                                            <% } %>
                                                        </div>
                                                        <small class="text-muted">(<%= item.rating %>)</small>
                                                        <small class="text-muted ms-3">
                                                            <i class="fas fa-users me-1"></i><%= item.students.toLocaleString() %> students
                                                        </small>
                                                    </div>
                                                    
                                                    <small class="text-muted">
                                                        <i class="fas fa-calendar-plus me-1"></i>
                                                        Added: <%= new Date(item.added_at).toLocaleDateString() %>
                                                    </small>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="text-end h-100 d-flex flex-column justify-content-between">
                                                    <div>
                                                        <h5 class="text-primary fw-bold">₹<%= item.price.toLocaleString() %></h5>
                                                        <% if (item.duration) { %>
                                                            <small class="text-muted">
                                                                <i class="fas fa-clock me-1"></i><%= item.duration %>
                                                            </small>
                                                        <% } %>
                                                    </div>
                                                    <div class="d-grid gap-2">
                                                        <form action="/cart/remove" method="POST">
                                                            <input type="hidden" name="courseId" value="<%= item.id %>">
                                                            <button type="submit" class="btn btn-outline-danger btn-sm w-100" 
                                                                    onclick="return confirm('Remove this course from cart?')">
                                                                <i class="fas fa-trash me-1"></i>Remove
                                                            </button>
                                                        </form>
                                                        <a href="/courses/<%= item.id %>" class="btn btn-outline-primary btn-sm">
                                                            <i class="fas fa-eye me-1"></i>View
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    </div>

                    <!-- Order Summary -->
                    <div class="col-lg-4">
                        <div class="card shadow-sm">
                            <div class="card-header">
                                <h5 class="mb-0">Order Summary</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-3">
                                    <span>Items (<%= cartItems.length %>):</span>
                                    <span>₹<%= total %></span>
                                </div>
                                
                                <div class="d-flex justify-content-between mb-3">
                                    <span>Discount:</span>
                                    <span class="text-success">₹0</span>
                                </div>
                                
                                <hr>
                                
                                <div class="d-flex justify-content-between mb-4">
                                    <strong>Total:</strong>
                                    <strong class="text-primary">₹<%= total %></strong>
                                </div>
                                
                                <div class="d-grid gap-2">
                                    <form action="/cart/checkout" method="POST">
                                        <button type="submit" class="btn btn-success btn-lg w-100" 
                                                onclick="return confirm('Proceed with checkout? You will be enrolled in all courses.')">
                                            <i class="fas fa-credit-card me-2"></i>Checkout
                                        </button>
                                    </form>
                                    
                                    <a href="/courses" class="btn btn-outline-primary">
                                        <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Benefits Card -->
                        <div class="card shadow-sm mt-4">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="fas fa-gift me-2 text-primary"></i>Why Choose Us?
                                </h6>
                                <ul class="list-unstyled small">
                                    <li class="mb-2">
                                        <i class="fas fa-check text-success me-2"></i>Lifetime access to courses
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-check text-success me-2"></i>Expert instructors
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-check text-success me-2"></i>Certificate of completion
                                    </li>
                                    <li class="mb-0">
                                        <i class="fas fa-check text-success me-2"></i>24/7 support
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </section>

    <!-- Footer -->
    <%- include('partials/footer') %>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .rating-stars i {
            font-size: 0.8rem;
        }
    </style>
</body>
</html>