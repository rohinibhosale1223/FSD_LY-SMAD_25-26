    <script>
        // Preserve scroll position across form submissions to avoid jump to top
        (function() {
            const storageKey = 'shelfwise-scroll-position';

            document.addEventListener('submit', function(event) {
                if (event.target && event.target.tagName === 'FORM') {
                    try {
                        sessionStorage.setItem(storageKey, String(window.scrollY || window.pageYOffset || 0));
                    } catch (err) {
                        console.warn('Unable to persist scroll position:', err);
                    }
                }
            }, true);

            window.addEventListener('DOMContentLoaded', function() {
                try {
                    const stored = sessionStorage.getItem(storageKey);
                    if (stored !== null) {
                        const position = parseInt(stored, 10);
                        if (!Number.isNaN(position)) {
                            window.scrollTo(0, position);
                        }
                        sessionStorage.removeItem(storageKey);
                    }
                } catch (err) {
                    console.warn('Unable to restore scroll position:', err);
                }
            });
        })();
    </script>
