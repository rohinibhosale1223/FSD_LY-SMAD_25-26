<%- include('partials/header', { title: title, currentPage: currentPage }) %>

    <!-- Hero Section -->
    <section class="py-4" style="background: linear-gradient(135deg, #114847 0%, #aa594e 100%); color: white; margin-top: 80px;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <h1 class="h2 mb-0"><i class="bi bi-cart3 me-2"></i>Your Shopping Cart</h1>
                </div>
                <div class="col-auto">
                    <% if (items && items.length > 0) { %>
                        <span class="badge fs-6 px-3 py-2" style="background-color: rgba(255,255,255,0.2); border-radius: 20px;"><%= items.length %> item<%= items.length > 1 ? 's' : '' %></span>
                    <% } %>
                </div>
            </div>
        </div>
    </section>

    <!-- Cart Content -->
    <div class="container py-5 flex-grow-1">
        <% if (items && items.length) { %>
            <div class="row g-4">
                <div class="col-lg-8">
                    <div class="mb-4">
                        <h5 class="fw-bold" style="color: #114847;">Cart Items</h5>
                    </div>
                    <% items.forEach((item, index) => { %>
                        <div class="card border-0 shadow-sm mb-4" style="border-radius: 15px; overflow: hidden;">
                            <div class="card-body p-4">
                                <div class="row g-4 align-items-center">
                                    <div class="col-md-3">
                                        <div style="height: 160px; border-radius: 10px; overflow: hidden;">
                                            <img src="<%= item.image_url || 'https://picsum.photos/300/450' %>" 
                                                 class="img-fluid w-100 h-100" alt="<%= item.title %>" 
                                                 style="object-fit: cover;">
                                        </div>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="row align-items-center h-100">
                                            <div class="col-lg-6">
                                                <h5 class="fw-bold mb-2" style="color: #114847; line-height: 1.3;"><%= item.title %></h5>
                                                <p class="text-muted mb-2" style="font-size: 0.95rem;">by <strong><%= item.author %></strong></p>
                                                <div class="d-flex align-items-center gap-2 mb-3">
                                                    <span class="h6 mb-0" style="color: #aa594e;">₹<%= Number(item.price).toFixed(2) %></span>
                                                    <small class="text-muted">per item</small>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="d-flex flex-column gap-3">
                                                    <div class="d-flex align-items-center justify-content-between">
                                                        <form method="POST" action="/cart/update" class="d-flex align-items-center gap-2">
                                                            <input type="hidden" name="book_id" value="<%= item.book_id %>">
                                                            <label class="form-label mb-0 fw-semibold" style="color: #114847;">Qty:</label>
                                                            <input type="number" name="quantity" value="<%= item.quantity %>" min="1" max="10" 
                                                                   class="form-control" style="width: 70px; border: 2px solid #e6e6e6; border-radius: 8px;">
                                                            <button type="submit" class="btn btn-sm btn-outline-primary" style="border-radius: 20px;">
                                                                <i class="bi bi-arrow-clockwise"></i>
                                                            </button>
                                                        </form>
                                                        <div class="text-end">
                                                            <div class="h5 mb-0 fw-bold" style="color: #114847;">₹<%= (Number(item.price) * item.quantity).toFixed(2) %></div>
                                                            <small class="text-muted">subtotal</small>
                                                        </div>
                                                    </div>
                                                    <div class="text-end">
                                                        <form method="POST" action="/cart/delete" class="d-inline">
                                                            <input type="hidden" name="book_id" value="<%= item.book_id %>">
                                                            <button type="submit" class="btn btn-sm btn-outline-danger" style="border-radius: 20px;">
                                                                <i class="bi bi-trash3 me-1"></i> Remove
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
                
                <div class="col-lg-4">
                    <div class="card border-0 shadow-lg sticky-top" style="border-radius: 20px; top: 100px;">
                        <div class="card-body p-4">
                            <div class="text-center mb-4">
                                <div class="rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px; background: linear-gradient(135deg, #aa594e, #d39389);">
                                    <i class="bi bi-calculator text-white fs-4"></i>
                                </div>
                                <h4 class="fw-bold" style="color: #114847;">Order Summary</h4>
                            </div>
                            
                            <div class="border-bottom pb-3 mb-3">
                                <div class="d-flex justify-content-between mb-2">
                                    <span style="color: #666;">Subtotal:</span>
                                    <span class="fw-semibold" style="color: #114847;">₹<%= Number(total).toFixed(2) %></span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span style="color: #666;">Shipping:</span>
                                    <span class="fw-semibold text-success">FREE</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span style="color: #666;">Tax:</span>
                                    <span class="fw-semibold" style="color: #114847;">Included</span>
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <span class="h5 mb-0 fw-bold" style="color: #114847;">Total:</span>
                                <span class="h4 mb-0 fw-bold" style="color: #aa594e;">₹<%= Number(total).toFixed(2) %></span>
                            </div>
                            
                            <button class="btn btn-success btn-lg w-100 mb-3" 
                                    style="border-radius: 25px; font-weight: 600; padding: 15px; box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);">
                                <i class="bi bi-credit-card me-2"></i> Proceed to Checkout
                            </button>
                            
                            <div class="text-center">
                                <a href="/books" class="btn btn-outline-primary" style="border-radius: 20px;">
                                    <i class="bi bi-arrow-left me-1"></i> Continue Shopping
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <div class="mb-4">
                    <div class="rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 120px; height: 120px; background: linear-gradient(135deg, #F9F6EE, #e6e6e6);">
                        <i class="bi bi-cart-x" style="font-size: 4rem; color: #aa594e;"></i>
                    </div>
                </div>
                <h3 class="fw-bold mb-3" style="color: #114847;">Your cart is empty</h3>
                <p class="text-muted mb-4 lead">Discover amazing books and add them to your cart!</p>
                <a href="/books" class="btn btn-primary btn-lg px-5" style="border-radius: 25px;">
                    <i class="bi bi-book-fill me-2"></i> Browse Books
                </a>
            </div>
        <% } %>
    </div>

<%- include('partials/footer') %>
